@font-face
  font-family digi
  src url(../font/Digital.ttf)

html
  font-size 16px

body
  margin 0
  overflow hidden
  user-select none
  background url(../img/bg.png) no-repeat
  background-size cover
  background-position center
  font-family 'MicroSoft Yahei', '黑体', sans-serif

#app
  height 1080px
  transform-origin 0 0

#head-left
  position absolute
  top 12px
  left 15px
  z-index 1000

#head-right-search
  position absolute
  top 45px
  right 190px
  height 47px
  width 352px
  box-sizing border-box
  border-style solid
  border-width 5px 54px 8px 34px
  border-image url(../img/head-search.png) 5 54 8 34 fill
  transition all 1s ease
  input
    display block
    height 34px
    color #9ab0f7
    font-size 18px
    border 0
    width 100%
    background transparent
    outline none
  .searchbtn
    position absolute
    right -44px
    top 0
    width 38px
    height 38px
    border-radius 18px
    background transparent
    cursor pointer

#head-right-search.center
  width 622px
  right calc(50% - 311px)
  
#head-right-time
  position absolute
  top 22px
  right 36px
  color #9ab0f7
  text-align right
  z-index 1000
  .date
  .week
    font-family '楷体'
    font-size 20px
  .time
    font-family 'digi'
    font-size 60px
    line-height 50px
    letter-spacing 5px

.back-btn
  position absolute
  top 163px
  left 63px
  cursor pointer
  
.m-page
.m-overtop
  display none

#webgl-content
  position absolute
  top 0
  left 0
  width 100vw
  height 100vh
  transition all 1s ease
  &.moveRight
    left 50vw
  &.fadeTop
    top -80vh
    opacity 0