#page-topic>.left
  position absolute
  top 296px
  left 68px
  width 481px
  font-size 16px
  color #6f87d6
  transition all .5s ease
  >.h1
    font-size 24px
    color #ffb924
    margin-bottom 26px
  >.p
    line-height 28px
    height (@line-height * 8)
    margin-bottom 72px
  >.h2
    font-size 24px
    color #b7c9ff
    margin-bottom 18px
  >.cont
    line-height 28px
    height (@line-height * 5)
    margin-bottom 10px
    >.item
      display inline-block
      min-width 64px
      padding-right 8px

#page-topic>.charts
  position absolute
  bottom 64px
  width 1450px
  left 'calc(50% - %s)' % (@width / 2)
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-end
  visibility visible
  transition all .4s ease
  .layout0 &
    visibility hidden
    opacity 0
    transform translateY(60px)
  >div
    width 430px
    transition all .5s ease
  >:nth-child(2)
  >:nth-child(5)
    transition-delay .25s
  >:nth-child(3)
  >:nth-child(6)
    transition-delay .5s
  >.title
    font-size 18px
    color #b7c9ff
    text-align center

#page-topic>.right
  position absolute
  width 492px
  top 168px
  right 60px
  transition all .5s ease
  .listitem
    box-sizing border-box
    font-size 14px
    margin-bottom 68px
    text-decoration none
    display block
    &:last-child
      border-bottom 0
    >.head
      color #ff302b
      display flex
      justify-content space-between
      align-items center
      margin-bottom 18px
      >.title
        font-size 18px
    >.cont
      color #6f87d6
      line-height 28px
      height (@line-height * 3)
      margin-bottom 12px
      font-size 16px
    >.foot
      display flex
      justify-content space-between
      color #097e93

#page-topic.fadeOut
  >.left
  >.right
    opacity 0
  >.left
    transform translateX(-100px)
  >.right
    transform translateX(100px)
  >.charts
    >*
      transform translateY(80px)
      opacity 0
    